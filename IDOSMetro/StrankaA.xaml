<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IDOSMetro.StrankaA"
             Title="StrankaA">
    <VerticalStackLayout>
        <Label 
            Text="Linka A" FontSize="32" FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Stanice odjezdu: " FontSize="20"/>
        <Picker x:Name="pckStanice1" HorizontalOptions="CenterAndExpand"/>

        <Label Text="Stanice příjezdu: " FontSize="20"/>
        <Picker x:Name="pckStanice2" HorizontalOptions="CenterAndExpand"/>

        <Button Text="Zjisti čas cesty"
                FontSize="32"
                FontAttributes="Bold"
                Margin="50"
                BackgroundColor="Lime"
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>