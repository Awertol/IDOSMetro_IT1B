<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IDOSMetro.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="metro.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Jízdní řády Pražského metra"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            <Label 
                Text="Metro nyní jezdí"
                FontSize="28"
                HorizontalOptions="Center"
                x:Name="labelCas"
                Margin="0,50,0,0"/> <!--zleva, nahoře, vpravo, dole-->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
